{
  "name": "devnotes",
  "displayName": "DevNotes",
  "description": "A lightweight VSCode extension to track features, bugs, and notes during development.",
  "version": "0.0.1",
  "publisher": "Santosh Varma Addala",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Notebooks", "Visualization"],
  "activationEvents": [
    "onCommand:devnotes.addFeature",
    "onCommand:devnotes.addNote",
    "onCommand:devnotes.markCompleted",
    "onView:devnotesView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "devnotesView",
          "name": "ðŸ“’ DevNotes"
        }
      ]
    },
    "commands": [
      {
        "command": "devnotes.addFeature",
        "title": "DevNotes: Add Feature"
      },
      {
        "command": "devnotes.addNote",
        "title": "DevNotes: Add Note"
      },
      {
        "command": "devnotes.markCompleted",
        "title": "DevNotes: Mark Feature Completed"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "tslint": "^6.1.3",
    "vscode-test": "^1.6.1"
  }
}
